{
  "manifest_version": 3,
  "name": "Resume Tailor",
  "version": "1.0.0",
  "description": "AI-powered resume tailoring from job postings. Streamline your job application workflow.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "optional_host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content/linkedin-scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.indeed.com/viewjob*"],
      "js": ["content/indeed-scraper.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
